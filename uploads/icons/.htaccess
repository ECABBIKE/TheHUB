# Allow serving image files directly
<FilesMatch "\.(png|jpg|jpeg|gif|svg|ico|webp)$">
    ForceType none
    Header unset Content-Disposition
</FilesMatch>

# Block PHP execution
<FilesMatch "\.php[0-9]?$">
    Order deny,allow
    Deny from all
</FilesMatch>

# Disable script execution
Options -ExecCGI
AddHandler cgi-script .php .php5 .phtml .pl .py .jsp .asp .htm .shtml .sh .cgi

# Prevent directory listing
Options -Indexes
