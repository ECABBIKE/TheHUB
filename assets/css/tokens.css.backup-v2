/**
 * TheHUB Design Tokens
 * Tema-agnostiska variabler + Light/Dark themes
 */

:root {
    /* ===== SPACING ===== */
    --space-2xs: 0.25rem;   /* 4px */
    --space-xs: 0.5rem;     /* 8px */
    --space-sm: 0.75rem;    /* 12px */
    --space-md: 1rem;       /* 16px */
    --space-lg: 1.5rem;     /* 24px */
    --space-xl: 2rem;       /* 32px */
    --space-2xl: 3rem;      /* 48px */

    /* ===== TYPOGRAPHY ===== */
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-mono: 'JetBrains Mono', 'Fira Code', monospace;

    --text-xs: 0.75rem;     /* 12px */
    --text-sm: 0.875rem;    /* 14px */
    --text-base: 1rem;      /* 16px */
    --text-lg: 1.125rem;    /* 18px */
    --text-xl: 1.25rem;     /* 20px */
    --text-2xl: 1.5rem;     /* 24px */
    --text-3xl: 2rem;       /* 32px */

    --weight-normal: 400;
    --weight-medium: 500;
    --weight-semibold: 600;
    --weight-bold: 700;

    --leading-tight: 1.25;
    --leading-normal: 1.5;
    --leading-relaxed: 1.75;

    /* ===== BORDERS & RADIUS ===== */
    --radius-sm: 0.25rem;   /* 4px */
    --radius-md: 0.5rem;    /* 8px */
    --radius-lg: 0.75rem;   /* 12px */
    --radius-xl: 1rem;      /* 16px */
    --radius-full: 9999px;

    /* ===== SHADOWS ===== */
    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1);

    /* ===== TRANSITIONS ===== */
    --transition-fast: 150ms ease;
    --transition-base: 250ms ease;
    --transition-slow: 350ms ease;

    /* ===== Z-INDEX ===== */
    --z-base: 0;
    --z-dropdown: 100;
    --z-sticky: 200;
    --z-fixed: 300;
    --z-modal-backdrop: 400;
    --z-modal: 500;
    --z-toast: 600;

    /* ===== LAYOUT ===== */
    --header-height: 56px;
    --nav-height: 64px;
    --sidebar-width: 260px;
    --content-max-width: 1200px;
}

/* ===== LIGHT THEME (default) ===== */
:root,
[data-theme="light"] {
    --color-bg-page: #F8FAFC;
    --color-bg-surface: #FFFFFF;
    --color-bg-sunken: #F1F5F9;
    --color-bg-hover: #E2E8F0;

    /* FIXADE TEXTFÄRGER - mörkare för bättre kontrast */
    --color-text-primary: #0F172A;      /* Nästan svart */
    --color-text-secondary: #334155;    /* Mörkare grå (var #475569) */
    --color-text-muted: #64748B;        /* Medium grå (var #94A3B8) */

    --color-border: #E2E8F0;
    --color-border-strong: #CBD5E1;

    /* Accent */
    --color-accent: #2563EB;
    --color-accent-hover: #1D4ED8;
    --color-accent-light: rgba(37, 99, 235, 0.1);
    --color-accent-text: #1D4ED8;       /* Mörkare blå för text */

    /* Enduro Gul */
    --color-enduro: #FFD200;
    --color-enduro-hover: #E6BD00;
    --color-enduro-text: #92400E;       /* Mörk text på gul bakgrund */

    /* Status */
    --color-success: #15803D;           /* Mörkare grön */
    --color-success-bg: #DCFCE7;
    --color-warning: #A16207;           /* Mörkare gul/orange */
    --color-warning-bg: #FEF9C3;
    --color-error: #B91C1C;             /* Mörkare röd */
    --color-error-bg: #FEE2E2;
    --color-info: #0369A1;              /* Mörkare blå */
    --color-info-bg: #E0F2FE;

    /* Placement badges */
    --color-gold: #F59E0B;
    --color-silver: #9CA3AF;
    --color-bronze: #D97706;

    /* Legacy names (bakåtkompatibilitet) */
    --color-enduro-yellow: #FFD200;
    --color-enduro-yellow-dark: #E6BD00;
}

/* ===== DARK THEME ===== */
[data-theme="dark"] {
    --color-bg-page: #0F172A;
    --color-bg-surface: #1E293B;
    --color-bg-sunken: #0F172A;
    --color-bg-hover: #334155;

    --color-text-primary: #F1F5F9;
    --color-text-secondary: #CBD5E1;    /* Ljusare för bättre läsbarhet */
    --color-text-muted: #94A3B8;

    --color-border: #334155;
    --color-border-strong: #475569;

    /* Accent */
    --color-accent: #3B82F6;
    --color-accent-hover: #60A5FA;
    --color-accent-light: rgba(59, 130, 246, 0.15);
    --color-accent-text: #60A5FA;

    /* Enduro Gul - samma i dark mode */
    --color-enduro: #FFD200;
    --color-enduro-hover: #FFE033;
    --color-enduro-text: #FFD200;

    /* Status */
    --color-success: #22C55E;
    --color-success-bg: rgba(34, 197, 94, 0.15);
    --color-warning: #EAB308;
    --color-warning-bg: rgba(234, 179, 8, 0.15);
    --color-error: #EF4444;
    --color-error-bg: rgba(239, 68, 68, 0.15);
    --color-info: #0EA5E9;
    --color-info-bg: rgba(14, 165, 233, 0.15);

    /* Legacy names (bakåtkompatibilitet) */
    --color-enduro-yellow: #FFD200;
    --color-enduro-yellow-dark: #FFE033;

    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.3);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.4);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.4);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.4);
}
