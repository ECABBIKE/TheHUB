# TheHUB Production Environment Configuration
# Copy this to .env on your server and fill in the values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=production
APP_DEBUG=false

# ============================================================================
# ADMIN CREDENTIALS (for admin login)
# ============================================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme_immediately!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Fill these in from InfinityFree cPanel > MySQL Databases

DB_HOST=REPLACE_WITH_DB_HOST_FROM_CPANEL
DB_NAME=if0_40400950_THEHUB
DB_USER=REPLACE_WITH_DB_USER_FROM_CPANEL
DB_PASS=REPLACE_WITH_DB_PASSWORD_FROM_CPANEL
DB_CHARSET=utf8mb4

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_NAME=thehub_session
SESSION_LIFETIME=86400

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=xlsx,xls,csv

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
FORCE_HTTPS=false
DISPLAY_ERRORS=false
