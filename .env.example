# TheHUB Environment Configuration
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=production
APP_DEBUG=false

# ============================================================================
# ADMIN CREDENTIALS
# ============================================================================
# WARNING: You MUST set these before deploying to production!
ADMIN_USERNAME=admin
# Generate password hash with: php -r "echo password_hash('YourSecurePassword', PASSWORD_DEFAULT);"
ADMIN_PASSWORD_HASH=

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_NAME=thehub
DB_USER=thehub_user
DB_PASS=your_secure_password_here
DB_CHARSET=utf8mb4

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_NAME=thehub_session
SESSION_LIFETIME=86400

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=xlsx,xls,csv

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Force HTTPS redirect (set to false for local development)
FORCE_HTTPS=true

# Site URL (without trailing slash)
SITE_URL=https://your-domain.com
