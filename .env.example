# TheHUB Environment Configuration
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=production
APP_DEBUG=false

# ============================================================================
# ADMIN CREDENTIALS
# ============================================================================
# WARNING: Change these default credentials immediately!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme_immediately!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_NAME=thehub
DB_USER=thehub_user
DB_PASS=your_secure_password_here
DB_CHARSET=utf8mb4

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_NAME=thehub_session
SESSION_LIFETIME=86400

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=xlsx,xls,csv

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Set to true in production (requires HTTPS)
FORCE_HTTPS=false

# Set to false in production
DISPLAY_ERRORS=false

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
# Hostinger SMTP settings:
# Host: smtp.hostinger.com
# Port: 465 (SSL) or 587 (TLS)
# Username: your full email address (e.g., HUB@gravityseries.se)
# Password: your email password

MAIL_DRIVER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_ENCRYPTION=ssl
MAIL_USERNAME=info@gravityseries.se
MAIL_PASSWORD=your_email_password_here
MAIL_FROM_ADDRESS=info@gravityseries.se
MAIL_FROM_NAME=TheHUB

# ============================================================================
# SCF LICENSE PORTAL API
# ============================================================================
# Svenska CykelfÃ¶rbundet License Portal integration
# Contact SCF for API key: https://licens.scf.se
# API Documentation: https://licens.scf.se/api/1.0
SCF_API_KEY=your_scf_api_key_here

# ============================================================================
# STRIPE (BETALNINGAR)
# ============================================================================
# Alla betalningar gar via Stripe.
# Skapa konto pa https://dashboard.stripe.com
#
# --- STRIPE MODE ---
# Satt till "test" for att anvanda test-nycklar (inga riktiga pengar)
# Satt till "live" for riktiga betalningar
STRIPE_MODE=live
#
# --- LIVE-nycklar (anvands nar STRIPE_MODE=live) ---
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here
#
# --- TEST-nycklar (anvands nar STRIPE_MODE=test) ---
# Hamta fran Stripe Dashboard > Test mode > Developers > API Keys
STRIPE_TEST_SECRET_KEY=sk_test_your_stripe_test_secret_key_here
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key_here
STRIPE_TEST_WEBHOOK_SECRET=whsec_your_test_webhook_secret_here
#
# Platform fee i procent (standard 2%)
STRIPE_PLATFORM_FEE_PERCENT=2
#
# NUVARANDE SETUP:
# - Direct charges till plattformskonto
# - Bara kortbetalningar (Visa, Mastercard, Apple Pay, Google Pay)
# - Manuella utbetalningar till arrangorer
#
# ============================================================================
# SWISH (ENKEL - MANUELL BEKRAFTELSE)
# ============================================================================
# Enkelt Swish-alternativ med fast nummer. Deltagare betalar via Swish
# och skriver ordernummer som meddelande. Manuell bekraftelse av admin.
# Tas bort nar Swedbank Pay ar aktivt.
SWISH_NUMBER=1234567890
SWISH_PAYEE_NAME=Gravity Series Sverige

# ============================================================================
# SWEBANK PAY (NYA BETALNINGAR - MIGRATION PLANERAD)
# ============================================================================
# Swebank Pay Checkout - stodjer Swish, kort, faktura, Vipps, MobilePay
# Dokumentation: https://developer.swedbankpay.com/
# SDK: https://packagist.org/packages/swedbank-pay/swedbank-pay-sdk-php
#
# Valj betalningsprovider (stripe eller swedbank)
PAYMENT_PROVIDER=stripe
#
# Swebank Pay API Token
SWEDBANK_PAY_TOKEN=your_swedbank_pay_token_here
# Payee ID (Merchant ID)
SWEDBANK_PAY_PAYEE_ID=your_payee_id_here
# Mode: test eller production
SWEDBANK_PAY_MODE=test
