# TheHUB Environment Configuration
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=production
APP_DEBUG=false

# ============================================================================
# ADMIN CREDENTIALS
# ============================================================================
# WARNING: Change these default credentials immediately!
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme_immediately!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=localhost
DB_NAME=thehub
DB_USER=thehub_user
DB_PASS=your_secure_password_here
DB_CHARSET=utf8mb4

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_NAME=thehub_session
SESSION_LIFETIME=86400

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=xlsx,xls,csv

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Set to true in production (requires HTTPS)
FORCE_HTTPS=false

# Set to false in production
DISPLAY_ERRORS=false

# ============================================================================
# EMAIL CONFIGURATION (SMTP)
# ============================================================================
# Hostinger SMTP settings:
# Host: smtp.hostinger.com
# Port: 465 (SSL) or 587 (TLS)
# Username: your full email address (e.g., HUB@gravityseries.se)
# Password: your email password

MAIL_DRIVER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_ENCRYPTION=ssl
MAIL_USERNAME=info@gravityseries.se
MAIL_PASSWORD=your_email_password_here
MAIL_FROM_ADDRESS=info@gravityseries.se
MAIL_FROM_NAME=TheHUB

# ============================================================================
# SCF LICENSE PORTAL API
# ============================================================================
# Svenska CykelfÃ¶rbundet License Portal integration
# Contact SCF for API key: https://licens.scf.se
# API Documentation: https://licens.scf.se/api/1.0
SCF_API_KEY=your_scf_api_key_here

# ============================================================================
# STRIPE CONNECT (BETALNINGAR)
# ============================================================================
# Alla betalningar gar via Stripe Connect.
# Skapa konto pa https://dashboard.stripe.com
# Aktivera Connect: https://dashboard.stripe.com/connect/accounts/overview
#
# Secret key (borjar med sk_test_ eller sk_live_)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# Publishable key (borjar med pk_test_ eller pk_live_)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# Webhook secret (borjar med whsec_)
# Skapa webhook i Stripe Dashboard -> Developers -> Webhooks
# Endpoint URL: https://yourdomain.se/api/webhooks/stripe-webhook.php
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
# Platform fee i procent (standard 2%)
STRIPE_PLATFORM_FEE_PERCENT=2
